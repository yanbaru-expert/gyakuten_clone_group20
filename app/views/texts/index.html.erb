<div class="text">
  <div class="input-group justify-content-center">

    <input type="text" id="search-text" placeholder="教材を探す" style="width:30%;">

    <span class="input-group-btn">
      <button type="button" class="btn btn-default"></button>
    </span>
  </div>
  <h3 class="text-center">テキスト教材</h3>

  <div class="container-fluid">
    <div class="row">
      <% @texts.each do |text| %>
       <div class="col-md-4 d-flex" id="text">
         <a target="_blank" href="/texts/<%= text.id %>" class="btn text_content">
          <div class="card">
            <%= image_tag text.image_url(:thumb) ,class:"card-img" %>
            <div class="card-body">
              <h4 class="card-title"><%= "#{text.title}" %></h4>
              <p class="card-text"><%= "【#{text.genre}】" %></p>
            </div>
          </div>
         </a>
       </div>
          <% end %>
    </div>
  </div>

</div>
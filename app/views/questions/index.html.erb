<h1>新規投稿</h1>
<%= form_with model: @question, local: true do |form| %>
  <div class="form-group">
      <%= form.label  :title, "【質問】" %>
      <%= form.text_area :title, class: 'form-control', rows: "3" %>
  </div>
  <div class="form-group">
      <%= form.label :detail, "【詳細】" %>
      <%= form.text_area :detail, class: 'form-control', rows: "5" %>
  </div>
  <div class="form-group">
      <%= form.submit "送信", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<div class="questions">
  <% @questions.each do |question| %>
    <a href="/questions/<%= question.id %>" class="btn questions_content">
          <div class="row">
            <div class="col-md-7">
              <h3><%= question.title %></h3>
            </div>
            <div class="col-md-5">
              <p>質問日  <%= l question.created_at, format: :middle %></p>
            </div>
          </div>
  </a>
  <% end %>
</div>